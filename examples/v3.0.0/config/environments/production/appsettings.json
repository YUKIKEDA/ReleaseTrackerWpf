{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=prod-db-cluster.myapp.com;Database=MyApp_Production;User Id=prod_user;Password=${DB_PASSWORD};MultipleActiveResultSets=true",
    "Redis": "prod-redis-cluster.myapp.com:6379"
  },
  "AppSettings": {
    "Environment": "Production",
    "ApiBaseUrl": "https://api.myapp.com",
    "EnableSwagger": false,
    "EnableDetailedErrors": false,
    "CacheTimeoutMinutes": 60
  },
  "ExternalServices": {
    "PaymentGateway": {
      "BaseUrl": "https://payments.example.com",
      "ApiKey": "${PAYMENT_API_KEY}",
      "ClientVersion": "1.0.0",
      "TimeoutSeconds": 30
    },
    "EmailService": {
      "BaseUrl": "https://email.example.com",
      "ApiKey": "${EMAIL_API_KEY}",
      "ClientId": "${EMAIL_CLIENT_ID}",
      "TimeoutSeconds": 15
    }
  },
  "Database": {
    "CommandTimeout": 30,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "EnableSensitiveDataLogging": false
  },
  "Security": {
    "JwtSecret": "${JWT_SECRET}",
    "JwtExpiryMinutes": 480,
    "RequireHttps": true,
    "AllowedOrigins": [
      "https://www.myapp.com",
      "https://admin.myapp.com"
    ]
  },
  "Features": {
    "EnableUserRegistration": true,
    "EnableEmailVerification": true,
    "EnableTwoFactorAuth": true,
    "MaxFileUploadSizeMB": 50,
    "AllowedFileTypes": [".jpg", ".png", ".pdf", ".doc", ".docx", ".xlsx", ".ppt", ".pptx"]
  }
}
